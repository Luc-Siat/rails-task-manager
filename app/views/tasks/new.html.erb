<h1>New task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title%>
  <%= f.label :details%>
  <%= f.text_field :details%>
  <% if @task.new_record? %>
    <%  @task.completed = false %>
  <% else %>
    <%= f.label :completed%>
    <%= f.check_box :completed%>
  <% end %>
  <%= f.submit%>
<% end%>
