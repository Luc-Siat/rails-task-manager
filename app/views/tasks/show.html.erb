<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>

<% if @task.completed %>
  <p><%= <i class="fa-solid fa-square-check"></i> %></p>
<% else %>
  <p><%= <i class="fa-regular fa-square"></i>  %></p>
<% end %>


<%= link_to "Add a new task", new_task_path %>
<br>
<%= link_to "Edit the task", edit_task_path %>
<br>
<%= link_to "Delete the #{@task.title}", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }  %>
<br>
<br>
<%= link_to "Go back to tasks", tasks_path %>
